@model Employee
<h2>Create a New Employee</h2>
@using (Html.BeginForm("InsertEmployeeToDatabase", "Employee", "Post"))
{
    <input asp-for="EmployeeID" type="hidden" value="" />
    <label asp-for="FirstName" class="control-label">FirstName</label>
    <input type="text" name="Name" class="form-control" value="" />
    <label asp-for="MiddleInitial" class="control-label">MiddleInitial</label>
    <input type="text" name="Name" class="form-control" value="" />
    <label asp-for="LastName" class="control-label">LastName</label>
    <input type="text" name="Name" class="form-control" value="" />
    <label asp-for="EmailAddress" class="control-label">EmailAddress</label>
    <input type="text" name="Name" class="form-control" value="" />
    <label asp-for="PhoneNumber" class="control-label">PhoneNumber</label>
    <input type="number" step="0.01" name="Price" class="form-control" />
    <label asp-for="Title" class="control-label">Title</label>
    <input type="text" name="Name" class="form-control" value="" />
    <label asp-for="DateOfBirth" class="control-label">DateOfBirth</label>
    <input type="text" name="Name" class="form-control" value="" />
    <div class="form-group">
        <label for="">Select a Category</label>
        <select class="form-control" name="CategoryID" value="">
            @foreach (var cat in Model.Categories)
            {
                <option value="@cat.CategoryID">@cat.CategoryID @cat.Name</option>
            }
        </select>
    </div>
    <input type="submit" value="Create Product" class="btn btn-primary" />
}

